  "devDependencies": {
    "@tsconfig/node14": "^1.0.3",
    "@types/basiclightbox": "^5.0.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "esbuild": "^0.15.8",
    "esbuild-sass-plugin": "^2.3.2",
    "eslint": "^8.23.1",
    "nodemon": "^2.0.20",
    "parcel": "^2.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
